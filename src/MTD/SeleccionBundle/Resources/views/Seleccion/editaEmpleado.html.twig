                                    {{ form_widget(form.estadoCivil, { 'attr': {'placeholder': 'Seleccione el estado civil', 'class': 'form-control inputGroup',
                                                                 'title': 'Seleccione el estado civil',
                                                                  'value': empleado.estadoCivil } }) }}      
                                </div>
                                {{ form_errors(form.estadoCivil) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
