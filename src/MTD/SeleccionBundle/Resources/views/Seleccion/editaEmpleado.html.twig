                                {{ form_errors(form.gradoEscolaridad) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.profesion, 'Profesion Postulante:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.profesion, { 'attr': {'placeholder': 'Escriba la profesion del postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Profesion del postulante',
                                                                  'value': empleado.profesion } }) }}
                                </div>
                                {{ form_errors(form.profesion) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.otrosCursos, 'Otros Cursos:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.otrosCursos, { 'attr': {'placeholder': 'Escriba los cursos del postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Cursos del postulante',
                                                                  'value': empleado.otrosCursos } }) }}
                                </div>
                                {{ form_errors(form.otrosCursos) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.trabajosAnteriores, 'Trabajos Anteriores:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.trabajosAnteriores, { 'attr': {'placeholder': 'Escriba los trabajos en los que participo anteriormente el postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Trabajos anteriores',
                                                                  'value': empleado.trabajosAnteriores } }) }}
                                </div>
                                {{ form_errors(form.trabajosAnteriores) }}
                            </div>
                        </div>
                    </div>

                    <div class ="form-group">
                        <a type="button" href="{{ path('mtd_empleado_ver', { 'id': empleado.id }) }}" class="btn btn-default"> Cancelar</a>
                        <button type="submit" id ="enviar" name="enviar" class="btn btn-primary"> Actualizar</button>
                    </div>

                    {{form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/fechas/fechaNacimiento.js') }}"></script>
    <script src="{{ asset('public/js/jquery-datepicker.js') }}"></script>
{% endblock %}