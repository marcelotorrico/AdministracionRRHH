                                    {{ form_widget(form.direccion, { 'attr': {'placeholder': 'Escriba la direccion del postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Direccion del postulante',
                                                                  'value': empleado.direccion } }) }}
                                </div>
                                {{ form_errors(form.direccion) }}
