                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.dependientes, 'Nro de Dependientes:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.dependientes, { 'attr': {'placeholder': 'Ingrese el numero de dependientes', 'class': 'form-control inputGroup',
                                                                 'title': 'Numero de dependientes',
                                                                  'value': empleado.dependientes } }) }}      
                                </div>
                                {{ form_errors(form.dependientes) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.cedulaIdentidad, 'Cedula de Identidad:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.cedulaIdentidad, { 'attr': {'placeholder': 'Escriba la cedula de identidad', 'class': 'form-control inputGroup',
                                                                 'title': 'Cedula de identidad',
                                                                  'value': empleado.cedulaIdentidad } }) }}      
                                </div>
                                {{ form_errors(form.cedulaIdentidad) }}
                            </div>
