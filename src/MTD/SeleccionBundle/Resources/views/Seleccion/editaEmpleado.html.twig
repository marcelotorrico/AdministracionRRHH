                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.zona, 'Zona del Postulante:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.zona, { 'attr': {'placeholder': 'Escriba la zona donde vive el postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Zona del postulante',
                                                                  'value': empleado.zona } }) }}
                                </div>
                                {{ form_errors(form.zona) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.telefonoParticular, 'Telefono Particular:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.telefonoParticular, { 'attr': {'placeholder': 'Ingrese un telefono particular', 'class': 'form-control inputGroup',
                                                                 'title': 'Ingrese un telefono particular valido',
                                                                  'value': empleado.telefonoParticular } }) }}
                                </div>
                                {{ form_errors(form.telefonoParticular) }}
