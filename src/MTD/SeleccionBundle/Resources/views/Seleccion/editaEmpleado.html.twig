{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/datepicker.css') }}" /> 
{% endblock %}
    
{% block body %}
    {{ parent() }}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <script>alert('{{ flashMessage }}');</script>
    {% endfor %}
    <section class="jumbotron">
        <div class="container">
            <h2>Editar al Empleado: {{empleado.apellido}} {{empleado.nombre}}</h2>
        </div>
    </section>

    <div class="container">
        <div class="row">
            
            {{ include('menuEmpleado.html.twig')}}
            
                <div class="col-md-9">
                    {{ form_start(form) }}
                    {{form_errors(form)}}

                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.nombre, 'Nombre del Postulante:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.nombre, { 'attr': {'placeholder': 'Escriba el nombre del postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Escriba nombres validos',
                                                                  'value': empleado.nombre } }) }}
                                </div>
                                {{ form_errors(form.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.apellido, 'Apellido del Postulante:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.apellido, { 'attr': {'placeholder': 'Escriba el apellido del postulante', 'class': 'form-control inputGroup',
                                                                 'title': 'Escriba apellidos validos',
                                                                  'value': empleado.apellido } }) }}      
                                </div>
                                {{ form_errors(form.apellido) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.fechaNacimiento, 'Fecha de Nacimiento:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.fechaNacimiento, { 'attr': {'placeholder': 'Seleccione la fecha de nacimiento', 'class': 'form-control input-inline datepicker inputGroup',
                                                                 'title': 'Fecha de Nacimiento',
                                                                  'value': empleado.fechaNacimiento|date('d-m-Y') } }) }}
                                </div>
                                {{ form_errors(form.fechaNacimiento) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
                                    {{ form_label(form.lugar, 'Lugar:', {'label_attr': {'class': 'input-group-addon addonGroup'}}) }}

                                    {{ form_widget(form.lugar, { 'attr': {'placeholder': 'Lugar', 'class': 'form-control inputGroup',
                                                                 'title': 'Lugar',
                                                                  'value': empleado.lugar } }) }}
                                </div>
                                {{ form_errors(form.lugar) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class ="form-group">
                                <div class="input-group">
