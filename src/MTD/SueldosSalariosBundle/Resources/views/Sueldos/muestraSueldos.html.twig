{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <script>alert('{{ flashMessage }}');</script>
    {% endfor %}
        
    <section class="jumbotron">
        <div class="container ">
            <h2>Sueldos y Salarios de {{fecha}}</h2>
        </div>
    </section>
    <div class="container-fluid full-height">
        
        <div class="col-md-12">
            <br><br>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Empleado</th>
                            <th>F. Ingreso</th>
                            <th>Categoria</th>
                            <th>S. Basico</th>
                            <th>D. Mes</th>
                            <th>D. no Trabaj.</th>
                            <th>D. Trabaj.</th>
                            <th>H. Extras</th>
                            <th>B. Antiguedad</th>
                            <th>T. Ganado</th>
                            <th>Descuentos</th>
                            <th>Liquido Pagable</th>
                            <th>Premios y Viaticos</th>
                            <th>T. Pagado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sueldo in sueldos %}
                            <tr>
                                <td><strong>{{sueldo.empleado.apellido}} {{sueldo.empleado.nombre}}</strong></td>
                                <td>{{sueldo.sueldo.fechaIngreso|date('d-m-Y')}}</td>
                                <td>{{sueldo.sueldo.categoria}}</td>
                                <td>{{sueldo.sueldo.sueldoBasico}}</td>
                                <td>{{sueldo.sueldo.diasMes}}</td>
                                <td>{{sueldo.diasNoTrabajados}}</td>
                                <td><strong>{{sueldo.sueldo.diasTrabajados}}</strong></td>
                                <td>{{sueldo.sueldo.horasExtras}}</td>
                                <td>{{sueldo.sueldo.bonoAntiguedad}}</td>
                                <td><strong>{{sueldo.sueldo.totalGanado}}</strong></td>
                                <td>{{sueldo.totalDescuento}}</td>
                                <td><strong>{{sueldo.sueldo.liquidoPagable}}</strong></td>
                                <td>{{sueldo.totalPremios}}</td>
                                <td><strong>{{sueldo.sueldo.totalPagado}}</strong></td>
                        {%endfor%}
                    </tbody>    
                </table>
            </div>
        </div>
    </div>
{% endblock %}