{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <script>alert('{{ flashMessage }}');</script>
    {% endfor %}
        
    <section class="jumbotron">
        <div class="container ">
            <h2>Asistencia de {{empleado.apellido}} {{empleado.nombre}} </h2>
        </div>
    </section>
    <div class="container-fluid full-height">
        
        {{ include('menuEmpleado.html.twig')}}
        
        <div class="col-md-9">
            <br>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Ingreso Mañana</th>
                            <th>Salida Mañana</th>
                            <th>Ingreso Tarde</th>
                            <th>Salida Tarde</th>
                            <th>Actividades</th>
                            <th>Horas Normales</th>
                            <th>Horas Extras</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for asistencia in asistencias %}
                            {% if asistencia.activo == true%}
                                {% set break = false %}
                                {% for asistenciaEmpleado in asistenciasEmpleado if not break %}
                                    {% if asistenciaEmpleado.id == asistencia.id %}
                                        {% set break = true %}
                                        <tr>
                                            <td><strong>{{ asistenciaEmpleado.fecha|date('d-m-Y') }}</strong></td>
                                            <td>{{ asistenciaEmpleado.horaIngresoManana|date('H:i:s') }}</td>
                                            <td>{{ asistenciaEmpleado.horaSalidaManana|date('H:i:s') }}</td>
                                            <td>{{ asistenciaEmpleado.horaIngresoTarde|date('H:i:s') }}</td>
                                            <td>{{ asistenciaEmpleado.horaSalidaTarde|date('H:i:s') }}</td>
                                            <td>{{ asistenciaEmpleado.actividad }}</td>
                                            <td>{{ asistenciaEmpleado.totalHorasNormales }}</td>
                                            <td>{{ asistenciaEmpleado.totalHorasExtras }}</td>
                                            <td>
                                                <a href="{{ path('mtd_asistencia_elimina', { 'id': asistenciaEmpleado.id, 'idEmpleado': empleado.id }) }}" class="btn btn-sm btn-danger confirmarEliminacion">
                                                    Eliminar
                                                </a>
                                            </td>
                                        </tr>
                                    {%endif%}
                                {% endfor %}
                            {%endif%}
                        {% endfor %}
                    </tbody>    
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/modificar/mostrarDetalleAsistencia.js') }}"></script>
{% endblock %}