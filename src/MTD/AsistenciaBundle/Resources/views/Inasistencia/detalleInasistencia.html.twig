<div>
    {%for falta in faltas%}
        <div class="form-group">
            <label for="aviso" class="control-label col-md-6">Aviso:</label>
            <div class="col-md-6">
                {% if falta.aviso == true %}
                    <p class="form-control-static">Si</p>
                {%else%}
                    <p class="form-control-static">No</p>
                {%endif%}
            </div>
        </div>
        <div class="form-group">
            <label for="motivos" class="control-label col-md-6">Motivos:</label>
            <div class="col-md-6">
                <p class="form-control-static">{{falta.motivo}}</p>
            </div>
        </div>
    {%endfor%}
</div>